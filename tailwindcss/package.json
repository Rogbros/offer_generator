{
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "3.3.3",
    "htmx.org": "1.9.6",
    "cssnano": "6.0.1",
    "npm-watch": "0.11.0"
  },
  "watch": {
    "build:tailwindcss": {
      "patterns": [
        "./app/core/static/**/*.{html,js}",
        "./app/core/templates/**/*.{html,js}"
      ],
      "extensions": "html,js",
      "quiet": false
    }
  },
  "scripts": {
    "build:tailwindcss": "postcss ./app/core/static/css/tailwind-input.css -o ./app/core/static/css/tailwind-output.css",
    "build:htmx": "cp node_modules/htmx.org/dist/htmx.min.js ./app/core/static/js/htmx.min.js",
    "watch:tailwindcss": "npm-watch build:tailwindcss"
  }
}
